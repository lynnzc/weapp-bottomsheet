page {
    width: 100%;
    height: 100%;
    position: relative;
}

/*遮罩*/
.bottom-sheet-mask {
    position: absolute;
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.6;
    top: 0%;
    left: 0%;
    z-index: 99;
}

/*界面主体*/
.bottom-sheet-main {
    position: fixed;
    width: 80%;
    left: 10%;
    height: 500rpx;
    bottom: -500rpx;
    background: #fff;
    margin-top: 5rpx;
    z-index: 100;
}